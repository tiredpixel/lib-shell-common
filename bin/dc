#!/usr/bin/env bash
set -Eeuo pipefail

# For Bash completion:
#
#     echo 'complete -F _docker dc' >> ~/.bash_profile

cmd=$1
shift 1
opts=("$@")
dir=$(dirname "$(realpath "${BASH_SOURCE[0]}")")

case $cmd in
    build)
        exec "$dir/../docker/build" "${opts[@]}"
        ;;
    deploy)
        exec "$dir/../docker/deploy" "${opts[@]}"
        ;;
    upgrade)
        exec "$dir/../docker/upgrade" "${opts[@]}"
        ;;
    *)
        exec docker compose "$cmd" "${opts[@]}"
        ;;
esac
